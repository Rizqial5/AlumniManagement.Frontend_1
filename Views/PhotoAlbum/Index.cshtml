@model IEnumerable<AlumniManagement.Frontend.Models.PhotoAlbumModel>

@{
    ViewBag.Title = "Photo Gallery";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Photo Gallery</h2>

<div class="d-flex justify-content-between mb-3">
    <div>
        <button class="btn btn-primary">Add Album</button>
        <button class="btn btn-secondary">Add Photo</button>
        <button class="btn btn-danger">Delete Selected</button>
    </div>
    <div>
        <input type="text" class="form-control" placeholder="Search.." />
    </div>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card">
                <img src="~/images/placeholder.png" class="card-img-top" alt="Album Image">
                <div class="card-body text-center">
                    <h5 class="card-title">@item.AlbumName</h5>
                    <p class="card-text"><small class="text-muted">Last Updated: @item.ModifiedDate.ToString("dd-MMM-yyyy HH:mm:ss tt")</small></p>
                    <div class="d-flex justify-content-center">
                        <button class="btn btn-sm btn-outline-primary mx-1"><i class="fas fa-pencil-alt"></i></button>
                        <button class="btn btn-sm btn-outline-danger mx-1"><i class="fas fa-trash-alt"></i></button>
                        <input type="checkbox" class="form-check-input mx-1">
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div class="d-flex justify-content-between align-items-center mt-4">
    <select class="form-select w-auto">
        <option>10</option>
        <option>20</option>
        <option>50</option>
    </select>
    <nav>
        <ul class="pagination">
            <li class="page-item"><a class="page-link" href="#">« Prev</a></li>
            <li class="page-item active"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">4</a></li>
            <li class="page-item"><a class="page-link" href="#">5</a></li>
            <li class="page-item"><a class="page-link" href="#">Next »</a></li>
        </ul>
    </nav>
</div>

<div></div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js"></script>
}